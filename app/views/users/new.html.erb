<%= render "layouts/header" %>
    <!-- =========================
      START PAGE TITLE SECTION
      ============================== -->
    <section class="page-title-area contact-area" style="padding-top: 150px;">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="about-head-content">
                        <h2>Register</h2>
                        <p>You're on your way to your millions!</p>
                    </div>
                    <div class="breadcrumbs text-center">
                        <ul class="page-breadcrumbs">
                            <li><a href="#">home</a></li>
                            <li><a href="#">Register</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- =========================
      END PAGE TITLE SECTION
      ============================== -->
    <!-- =========================
      START CONTACT US SECTION
      ============================== -->
    <section class="contact-us-area contact-us-1-area">
        <div class="contact-form">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="contact-form-left contact-form-3">
                            <h2>Fill <b>All</b> Fields Below <i style="color: #00cc00; font-weight: 100; font-size: 12px">(<span style="color: red">*</span>) important fields</i></h2>
                            <div class="show_result"></div>
                            <div class="result_message"></div>
                            <%= simple_form_for @user do |f| %>

                               <% if @user.errors.present? %>
                                 <ul>
                                    <% @user.errors.full_messages.each do |msg| %>
                                    <li><%= msg %></li>
                                    <% end %> 
                                 </ul>
                               <% end %>
                                <div class="row">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">Sponsor Details</h3>
                                        </div>
                                        <div class="panel-body">
                                            <div class="col-sm-12">
                                                <!-- <input type="text" id="s_id" class="form-control" placeholder="Sponsor ID"> -->
                                                <%= f.input :sponsor_id, input_html: { class: "form-control" }, placeholder:"Enter Sponsor ID", label: 'Sponsor ID', required: true  %>
                                            </div>
                                            <div class="col-sm-12">
                                                <input type="text" id="s_name" class="form-control" placeholder="Sponsor Name">
                                                <%#= f.input :sponsor_name, class: "form-control", placeholder:"Sponsor ID"  %>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">Personal Details</h3>
                                        </div>
                                        <div class="panel-body">
                                            <div class="col-sm-12">
				                                        <!-- <input type="text" id="username" class="form-control" placeholder="Username">  -->
				                                        <%= f.input :username, input_html: { class: "form-control" }, placeholder:"Enter Username", label: "Username"  %>
				                                    </div>
				                                    <div class="col-sm-12">
				                                        <!-- <input type="text" class="form-control" id="full_name" placeholder="Full Name"> -->
				                                        <%= f.input :full_name, input_html: { class: "form-control" }, placeholder:"Enter name here", label: "Full Name"   %>
				                                    </div>
				                                    <div class="col-sm-12">
				                                        <!-- <input type="text" class="form-control" id="Phone" placeholder="Phone"> -->
				                                        <%= f.input :phone_number, input_html: { class: "form-control" }, placeholder:"Enter Phone number here", label: "Phone Number"  %>
				                                    </div>
				                                    <div class="col-sm-12">
				                                        <!-- <input type="email" id="Email" class="form-control" placeholder="Email"> -->
				                                        <%= f.input :email, input_html: { class: "form-control" }, placeholder:"me@example.com", label: "Email Address"  %>
				                                    </div>
                                        </div>
                                    </div>

                                 

                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">Address Details</h3>
                                        </div>
                                        <div class="panel-body">
                                            <div class="col-sm-12">
				                                        <!-- <textarea class="form-control" rows="2" id="address"  placeholder="Address"></textarea> -->
				                                        <%= f.input :address, as: :text, input_html: { class: "form-control" }, placeholder:"Enter Address", label: "Home Address"  %>
				                                    </div>
				                                    <div class="col-sm-12">
				                                        <!-- <input type="text" id="City" class="form-control" placeholder="City"> -->
				                                        <%= f.input :city, input_html: { class: "form-control" }, placeholder:"City"  %>
				                                    </div>
				                                    <div class="col-sm-12">
				                                        <!-- <input type="text" id="State-province" class="form-control" placeholder="State/Province"> -->
				                                        <%= f.input :state, input_html: { class: "form-control" }, placeholder:"State/Province", required: true  %>
				                                    </div>
				                                    <div class="col-sm-12">
				                                        <!-- <input type="text" id="Country" class="form-control" placeholder="Country"> -->
				                                        <%= f.input :country, as: :select, collection: ["Nigeria", "Ghana"], blank: true, prompt: "Select Country",  input_html: { class: "form-control" }, placeholder:"Country", required: true  %>
				                                    </div>
				                                    <div class="col-sm-12">
				                                        <!-- <input type="text" id="Zipcode" class="form-control" placeholder="Zip Code"> -->
				                                        <%= f.input :zip_code, input_html: { class: "form-control" }, placeholder:"Zip Code"  %>
				                                    </div>
                                        </div>
                                    </div>

                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">Bank Details</h3>
                                        </div>
                                        <div class="panel-body">
                                            <div class="col-sm-12">
				                                        <!-- <input type="text" id="account-name" class="form-control" placeholder="Account Name"> -->
				                                        <%= f.input :account_name, input_html: { class: "form-control" }, placeholder:"Enter Bank Account Name"  %>
				                                    </div>
				                                    <div class="col-sm-12">
				                                        <!-- <input type="text" id="account-number" class="form-control" placeholder="Account Number"> -->
				                                        <%= f.input :account_number, input_html: { class: "form-control" }, placeholder:"Enter Bank Account Number"  %>
				                                    </div>
				                                    <div class="col-sm-12">
				                                        <!-- <input type="text" id="bank-name" class="form-control" placeholder="Bank Name"> -->
				                                        <%= f.input :bank_name, input_html: { class: "form-control" }, placeholder:"Enter Bank Name"  %>
				                                    </div>
                                        </div>
                                    </div>

                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">Security Details</h3>
                                        </div>
                                        <div class="panel-body">
                                            <div class="col-sm-12">
				                                        <!-- <input type="password" id="pword" class="form-control" placeholder="Password">  -->
				                                        <%= f.input :password, input_html: { class: "form-control" }, placeholder:"Enter Password here"  %>
				                                    </div>
				                                    <div class="col-sm-12">
				                                        <!-- <input type="password" id="pword-confirmation" class="form-control" placeholder="Confirm Password">  -->
				                                        <%= f.input :password_confirmation, input_html: { class: "form-control" }, placeholder:"Confirm your Password", required: true  %>
				                                    </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 text-center">
                                        <button type="button" id="submit" class="btn btn-dm">Register</button>
                                        <%= f.submit "Register", as: :button, class: "btn btn-dm" %>
                                    </div>
                                </div>
                                <% end %>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="contact-form-3-text">
                            <h2>Need Help?</h2>
                            <p>Feel free to contact me for any questions or if you need any help or services ! I provide competitive insight and market analysis no one can duplicate. Analysis reveals opportunities, supports decisions, connects your SEO tactics and strategy directly to revenue.</p>
                            <div class="address-area">
                                <div class="view-location">
                                    <h2>Address :</h2>
                                    <p><i class="fa fa-map-marker"></i> Salisbury Plaza, Capital Beltway, Maryland USA.</p>
                                </div>
                                <div class="col-md-6 no-padding-left">
                                    <div class="address-details">
                                        <h2>Email :</h2>
                                        <span><i class="fa   fa-envelope"></i>info@essentiallife.com.ng</span>
                                    </div>
                                </div>
                                <div class="col-md-6 no-padding-left">
                                    <div class="address-details">
                                        <h2>Phone :</h2>
                                        <span><i class="fa  fa-phone"></i>  +234 813 697 4350</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- =========================
      START CONTACT US SECTION
      ============================== -->
    <%= render "layouts/footer" %>

<style type="text/css">
	label.string, label.tel, label.email, label.integer, label.select, label.text, label.password {
	    font-size: 12px;
	    font-style: italic;
	    font-weight: 100;
	}
	.contact-form form input, .contact-form form input:focus, .contact-form form textarea, .contact-form form textarea:focus{
		padding-left: 10px;
		border-width: 1px 1px 4px 1px;
		font-weight: 100
	}
	select.form-control{
		margin-bottom: 40px;
		border-radius: 0px;
		border-width: 1px 1px 4px 1px;
		border-color: #e8e8e8;
		height: 52px;
	}
</style>